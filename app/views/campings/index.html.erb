<p id="notice"><%= notice %></p>

<h1>Campings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>Ville</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campings.each do |camping| %>
      <tr>
        <td><%= camping.name %></td>
        <td><%= camping.body %></td>
        <td><%= camping.ville_id %></td>
        <td><%= link_to 'Show', camping %></td>
        <td><%= link_to 'Edit', edit_camping_path(camping) %></td>
        <td><%= link_to 'Destroy', camping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

